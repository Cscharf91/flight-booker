<%= form_with(url: flights_index_path, method: "get", local: true) do %>
      <%= label_tag(:origin, "From: ") %>
      <%= select_tag(:origin, options_for_select(@airport_options)) %></br>
      <%= label_tag(:destination, "To: ") %>
      <%= select_tag(:destination, options_for_select(@airport_options)) %></br>
      <%= label_tag(:passengers, "Passenger(s):")%>
      <%= select_tag(:passengers, options_for_select((1..4).step(1)), class: 'form-control') %></br>
      <%= label_tag(:startdate, "Departure Date:")%>
      <%= select_tag(:startdate, options_for_select(@dates)) %></br>
      <%= submit_tag("Search") %>
<% end %>